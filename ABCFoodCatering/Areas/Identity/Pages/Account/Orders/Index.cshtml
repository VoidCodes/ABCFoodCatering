@page
@model ABCFoodCatering.Areas.Identity.Pages.Account.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Manage Orders</h2>

<p>
    <a asp-page="Create" class="btn btn-success">Add New Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].FoodDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].DeliveryAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].DeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].DeliveryTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].orderCompleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.orderCompleted)
                </td>
                <td>
                    @if (item.orderCompleted == true)
                    {
                        <a asp-page="./Edit" asp-route-id="@item.OrderID" class="btn btn-warning" style="display:none">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.OrderID" class="btn btn-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.OrderID" class="btn btn-danger" style="display:none">Delete</a>
                    }
                    else
                    {
                        <a asp-page="./Edit" asp-route-id="@item.OrderID" class="btn btn-warning">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.OrderID" class="btn btn-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.OrderID" class="btn btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
